@{
    Layout = "_Layout";
}

@using StoreVendors.Models;
@if (@Model["orders"].Count == 0)
{
    <h3>There are no orders for @Model["vendor"].Name, add an order:</h3>
}
else
{
    <h3>Here are all of the orders for @Model["vendor"].Name!:</h3>

    <ol>
        @foreach (Order order in @Model["orders"])
        {
            <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Name</a></li>
        }
    </ol>
}


<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add another order</a></p>
<p><a href='/vendors'>Return to Vendor's List</a></p>
<p><a href='/'>Return to Home page</a></p> 